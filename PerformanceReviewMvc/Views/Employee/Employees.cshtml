@model PerformanceReviewMvc.Models.SearchEmployeeViewModel

@{
    ViewData["Title"] = "Employee Dashboard";

} 
<div class="mt-1">
    <form method="post" asp-controller="Employee" asp-action="Employees">
    <label class="form-label">EmployeeId</label>
    <input type="number" class="form-control" asp-for="Id"/>

    <label class="form-label">LastName</label>
    <input type="text" class="form-control" asp-for="LastName"/>

    <label class="form-label">FirstName</label>
    <input type="text" class="form-control" asp-for="FirstName"/>
   
    <div>
        <p align="right">
    <button type="submit" class="btn-primary">Fetch</button>
        </p
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Employees</h1>
            </div>
            <div class="panel-body">
                <table id="Employees-data-table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>LastName</th>
                            <th>FirstName</th>
                            <th>Age</th>
                            <th>Position</th>
                            <th>Contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Employee in Model.EmployeeList)
                        {
                            <tr>
                                <td>@Employee.Id</td>
                                <td>@Employee.LastName</td>
                                <td>@Employee.FirstName</td>
                                <td>@Employee.Age</td>
                                <td>@Employee.Position</td>
                                <td>@Employee.Contact</td>
                                <td><button type="submit" onclick='window.location.href = "@Url.Action("CreateEdit", "Employee")"' >Edit</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="button" class="btn btn-info" value="CreateNew" onclick='window.location.href = "@Url.Action("CreateEdit", "Employee")"' />


</div>
@section Scripts
{

    <script type="text/javascript">
        $(document).ready( Employees() {

            $('#employee-data-table').DataTable();
        });
    </script>

}
